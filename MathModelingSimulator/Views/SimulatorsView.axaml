<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MathModelingSimulator.Views.SimulatorsView"
			 x:DataType="vm:MainWindowViewModel"
			 xmlns:vm="using:MathModelingSimulator.ViewModels">
	
	<ScrollViewer>
		<StackPanel>
			<Button Content="Задача коммивояжера"
					Command="{Binding SimulatorsVM.GetTask}"
					CommandParameter="1"/>
			<Button Content="Северо-западный метод"
					Command="{Binding SimulatorsVM.GetTask}"
					CommandParameter="2"/>
			<Button Content="Метод минимальной стоимости"
					Command="{Binding SimulatorsVM.GetTask}"
					CommandParameter="3"/>
			<Button Content="Дейкстра"
					Command="{Binding SimulatorsVM.GetTask}"
					CommandParameter="4"/>
		</StackPanel>
	</ScrollViewer>
</UserControl>
