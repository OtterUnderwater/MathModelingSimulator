<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MathModelingSimulator.Views.AuthorizationView"
			 x:DataType="vm:MainWindowViewModel"
			 xmlns:vm="using:MathModelingSimulator.ViewModels">
	
	
	<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
		<TextBlock 
			Text="Вход" 
			FontWeight="Bold" 
			FontSize="24" 
			TextAlignment="Center"
			Margin="0 0 0 20"/>
		<TextBox 
			Watermark="Логин" 
			Name="login" 
			Text="{Binding AuthVM.Login}"/>
		<TextBox 
			Watermark="Пароль" 
			Name="password" 
			PasswordChar="●"  
			Margin="0 20 0 0"
			Text="{Binding AuthVM.Password}"/>
		<TextBlock Text="{Binding AuthVM.Massage}"/>
		<Button 
			Content="Войти"
			HorizontalContentAlignment="Center"
			HorizontalAlignment="Stretch"
			Margin="0 20 0 20"
			Command="{Binding AuthVM.CheckAuthorization}"/>
		<TextBlock 
			Text="---или---" 
			HorizontalAlignment="Center"/>
		<Button 
			Content="Зарегистрироваться"
			HorizontalContentAlignment="Center"
			HorizontalAlignment="Stretch" 
			Margin="0 20 0 20"
			Command="{Binding AuthVM.GoToRegistration}" />
	</StackPanel>

</UserControl>
