<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MathModelingSimulator.Views.RegistrationView"
			 x:DataType="vm:MainWindowViewModel"
			 xmlns:vm="using:MathModelingSimulator.ViewModels">
	<StackPanel>
		<StackPanel>
			<!--Биндинги изменить-->
			<TextBlock Text="{Binding AuthVM.Massage}"/>
			<TextBlock Text="Введите фамилию:"/>
			<TextBox Text="{Binding AuthVM.Login}"/>
			<TextBlock Text="Введите имя:"/>
			<TextBox Text="{Binding AuthVM.Login}"/>
			<TextBlock Text="Введите отчество:"/>
			<TextBox Text="{Binding AuthVM.Login}"/>
			<TextBlock Text="Введите телефон:"/>
			<TextBox Text="{Binding AuthVM.Login}"/>
			<TextBlock Text="Введите почту:"/>
			<TextBox Text="{Binding AuthVM.Login}"/>
			<TextBlock Text="Придумайте логин:"/>
			<TextBox Text="{Binding AuthVM.Login}"/>
			<TextBlock Text="Придумайте пароль:"/>
			<TextBox Text="{Binding AuthVM.Login}"/>
			<TextBlock Text="Выберите роль:"/>
			<TextBox Text="{Binding AuthVM.Login}"/>
			
			<Button Content="Регистрация" Command="{Binding AuthVM.Click}"/>
		</StackPanel>
	</StackPanel>
</UserControl>
