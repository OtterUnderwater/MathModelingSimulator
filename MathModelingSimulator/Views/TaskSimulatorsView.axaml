<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MathModelingSimulator.Views.TaskSimulatorsView"
			 x:DataType="vm:MainWindowViewModel"
			 xmlns:vm="using:MathModelingSimulator.ViewModels">

	<StackPanel>
		<TextBlock Text="{Binding TaskSimulatorsVM.SimulatorName}"/>
		<TextBlock Text="Теория:"/>
		<TextBlock Text="{Binding TaskSimulatorsVM.Theory}"/>
		<TextBlock Text="Практика:"/>
		<UserControl Content="{Binding TaskSimulatorsVM.Matrix}"/>
		<TextBox Text="{Binding TaskSimulatorsVM.Answer}"/>
		<Button Content="Ответить" Command="{Binding TaskSimulatorsVM.ClickAnswer}"/>
		<TextBlock Text="{Binding TaskSimulatorsVM.Message}"/>
	</StackPanel>

</UserControl>
